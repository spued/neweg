<div class="modal" id="modalUserChangePassword" tabindex="-1" role="dialog" aria-labelledby="modalTitle" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Change password </h5>
                <button type="button" class="btn close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/change_password" method="post" id="form_user_user_password">
                    <div class="row">
                        <div class="col-xl-12">
                            <label for="e_email">password</label>
                            <input type="password" class="form-control" id="u_password" name="passwd">
                        </div>
                        <div class="col-xl-12">
                            <label for="e_fullname">confirm</label>
                            <input type="password" class="form-control" id="u_password_confirm" name="passwd_confirm">
                        </div>
                        <input type="hidden" id="u_user_id" name="user_id" value="<%- _id %>" />
                        <input type="hidden" id="u_username" name="username" value="<%- username %>" />
                    </div>
                  </form>
            </div>
            <div class="modal-footer">
                <button type="button" form="form_user_password" class="btn btn-success btn-set-user-password" >Save</button>
                <button type="button" class="btn btn-warning close" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>